<root>
	<windowclass name="charsheet_abilities">
		<sheetdata>

<!-- Traits -->
			<frame_char name="traitsframe">
				<bounds>15,0,-30,125</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="traitsframe" />
				<static textres="char_label_traits" />
			</label_frametop>
			<list_chartraits name="traits">
				<anchored to="traitsframe">
					<left offset="15"/>
					<top offset="35"/>
					<right offset="-15"/>
					<bottom offset="-20"/>
				</anchored>
			</list_chartraits>
			<scrollbar_list>
				<anchored to="traits"/>
				<target>traits</target>
			</scrollbar_list>
			<button_iedit name="traits_iedit">
				<anchored to="traits" position="aboveright" offset="5,5"/>
				<target>traits</target>
			</button_iedit>
			<button_iadd name="traits_iadd">
				<anchored to="traits_iedit" position="lefthigh" offset="5,0"/>
				<target>traits</target>
			</button_iadd>
			
<!-- Talents -->
			<frame_char name="talentsframe">
				<anchored to="traitsframe" position="belowleft" offset="0,0" width="480" height="125" />
			</frame_char>
			<label_frametop>
				<anchored to="talentsframe" />
				<static textres="char_label_talents" />
			</label_frametop>
			<list_chartalents name="talents">
				<anchored to="talentsframe">
					<left offset="15"/>
					<top offset="35"/>
					<right offset="-15"/>
					<bottom offset="-20"/>
				</anchored>
			</list_chartalents>
			<scrollbar_list>
				<anchored to="talents"/>
				<target>talents</target>
			</scrollbar_list>
			<button_iedit name="talents_iedit">
				<anchored to="talents" position="aboveright" offset="5,5"/>
				<target>talents</target>
			</button_iedit>
			<button_iadd name="talents_iadd">
				<anchored to="talents_iedit" position="lefthigh" offset="5,0"/>
				<target>talents</target>
			</button_iadd>

<!-- Career Background -->
			<frame_char name="backgroundframe">
				<anchored to="talentsframe" position="belowleft" offset="0,0" width="480" height="125" />
			</frame_char>
			<label_frametop>
				<anchored to="backgroundframe" />
				<static textres="char_label_background" />
			</label_frametop>
			<list_charbackground name="background">
				<anchored to="backgroundframe">
					<left offset="15"/>
					<top offset="35"/>
					<right offset="-15"/>
					<bottom offset="-20"/>
				</anchored>
			</list_charbackground>
			<scrollbar_list>
				<anchored to="background"/>
				<target>backgrond</target>
			</scrollbar_list>
			<button_iedit name="background_iedit">
				<anchored to="background" position="aboveright" offset="5,5"/>
				<target>background</target>
			</button_iedit>
			<button_iadd name="background_iadd">
				<anchored to="background_iedit" position="lefthigh" offset="5,0"/>
				<target>background</target>
			</button_iadd>
								
<!-- Career Notes to be changed to Milestone and other things -->
			<frame_char name="careerframe">
				<anchored to="backgroundframe" position="belowleft" offset="0,0"
				width="480" height="335" />
			</frame_char>
			<label_frametop>
				<anchored to="careerframe" />
				<static textres="char_label_career" />
			</label_frametop>
			<stringu name="careernotes">
				<anchored to="careerframe">
					<top offset="30" />
					<left offset="15" />
					<right offset="-20" />
					<bottom offset="-15" />
				</anchored>
				<multilinespacing>20</multilinespacing>
			</stringu>
			<scrollbar_list>
				<anchored to="careernotes" />
				<target>careernotes</target>
			</scrollbar_list>

		</sheetdata>
	</windowclass>
</root>
