<root>
	<windowclass name="charsheet_main">
		<margins control="0,0,0,2" />
		<script>
			function onDrop(x, y, draginfo)
				if draginfo.isType("shortcut") then
					local sClass, sRecord = draginfo.getShortcutData();

					if StringManager.contains({"species", "environment", "upbringing", "traits"}, sClass) then
						CharManager.addInfoDB(getDatabaseNode(), sClass, sRecord);
						return true;
					end
				end
			end
		
		</script>	
		<sheetdata>
		
<!-- Details -->
			<frame_char name="detailsframe">
				<bounds>15,0,488,180</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="detailsframe" />
				<static textres="char_label_details" />
			</label_frametop>
			<string_labeled name="rank" source="details.rank">
				<anchored to="detailsframe" position="insidetopleft" offset="15,30" width="220" height="20" />
				<labelres>char_label_rank</labelres>
			</string_labeled>
			<string_labeled name="species">
				<anchored to="rank" position="righthigh" offset="5,0" width="220" height="20" />
				<labelres>char_label_species</labelres>
			</string_labeled>
			<string_labeled name="environment">
				<anchored to="detailsframe" position="insidetopleft" offset="15,65" width="220" height="20" />
				<labelres>char_label_environment</labelres>
			</string_labeled>
			<string_labeled name="upbringing">
				<anchored to="environment" position="righthigh" offset="5,0" width="220" height="20" />
				<labelres>char_label_upbringing</labelres>
			</string_labeled>
			<string_labeled name="assignment">
				<anchored to="detailsframe" position="insidetopleft" offset="15,100" width="440" height="20" />
				<labelres>char_label_assignment</labelres>
			</string_labeled>
			<string_labeled name="trait">
				<anchored to="detailsframe" position="insidetopleft" offset="15,135" width="440" height="20" />
				<labelres>char_label_trait</labelres>
			</string_labeled>

<!-- Rolling Window -->
			<frame_char name="rollingframe">
				<anchored to="detailsframe" position="belowleft" offset="0,0" width="488" height="60" />
			</frame_char>
			<label name="targetroll_label">
				<anchored to="rollingframe" position="insidetopleft" offset="15,15" width="20"/>
				<static textres="char_label_roll_tn"/>
			</label>
			<basicnumber name="target_roll" source="rollable.targetroll">
				<anchored to="targetroll_label" position="righthigh" offset="0,0" width="20" height="20"/>
			</basicnumber>
			<label name="dicetoroll_label">
				<anchored to="target_roll" position="righthigh" offset="25,0" width="70"/>
				<static textres="char_label_roll_dicetouse"/>
			</label>
			<basicnumber name="dicetoroll" source="rollable.dicetoroll">
				<anchored to="dicetoroll_label" position="righthigh" offset="0,0" width="20" height="20"/>
				<script>
					function onInit()
						setValue (2);
					end
				</script>
			</basicnumber>
			<label name="comprange_label">
				<anchored to="dicetoroll" position="righthigh" offset="30,0" width="70"/>
				<static textres="char_label_roll_comprange"/>
			</label>
			<basicnumber name="comprange" source="rollable.comprange">
				<anchored to="comprange_label" position="righthigh" offset="0,0" width="20" height="20"/>
				<script>
					function onInit()
						setValue (1);
					end
				</script>
			</basicnumber>
			<label name="focus_label">
				<anchored to="comprange" position="righthigh" offset="30,0" width="60"/>
				<static textres="char_label_roll_focus"/>
			</label>
			<button_checkbox name="focusselector" source="rollable.focusused">
				<anchored  to="focus_label" position="righthigh" width="20" height="20" />
				<script>
					function onInit()
						setValue (0);
					end
				</script>
			</button_checkbox>
			<button_roll name="rolling">
				<anchored to="focusselector" position="righthigh" offset="20,0" width="20" height="20" />
				<script>
					
				</script>
			</button_roll>

<!-- Attributes -->
			<frame_char name="attributesframe">			
				<anchored to="rollingframe" position="belowleft" offset="0,0" width="170" height="195" />
			</frame_char>
			<label_frametop>
				<anchored to="attributesframe" />
				<static textres="char_label_attributes" />
			</label_frametop>
			<char_attribute name="control" source="attribute.control">
				<anchored to="attributesframe" position="insidetopright" offset="25,35" width="30" height="20"/>
				<default>7</default>
			</char_attribute>
			<char_attribute name="daring" source="attribute.daring">
				<anchored to="control" position="belowleft" offset="0,5" width="30" height="20"/>
				<default>7</default>
			</char_attribute>
			<char_attribute name="fitness" source="attribute.fitness">
				<anchored to="daring" position="belowleft" offset="0,5" width="30" height="20"/>
				<default>7</default>
			</char_attribute>
			<char_attribute name="insight" source="attribute.insight">
				<anchored to="fitness" position="belowleft" offset="0,5" width="30" height="20"/>
				<default>7</default>
			</char_attribute>
			<char_attribute name="presence" source="attribute.presence">
				<anchored to="insight" position="belowleft" offset="0,5" width="30" height="20"/>
				<default>7</default>
			</char_attribute>
			<char_attribute name="reason" source="attribute.reason">
				<anchored to="presence" position="belowleft" offset="0,5" width="30" height="20"/>
				<default>7</default>
			</char_attribute>
			<label>
				<anchored to="control" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_attr_control"/>
			</label>
			<label>
				<anchored to="daring" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_attr_daring"/>
			</label>
			<label>
				<anchored to="fitness" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_attr_fitness"/>
			</label>
			<label>
				<anchored to="insight" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_attr_insight"/>
			</label>
			<label>
				<anchored to="presence" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_attr_presence"/>
			</label>
			<label>
				<anchored to="reason" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_attr_reason"/>
			</label>
      
<!-- Disciplines -->
			<frame_char name="disciplinesframe">
				<anchored to="attributesframe" position="righthigh" offset="0,0" width="170" height="195" />
			</frame_char>
			<label_frametop>
				<anchored to="disciplinesframe" />
				<static textres="char_label_disciplines" />
			</label_frametop>
			<char_attribute name="command" source="discipline.command">
				<anchored to="disciplinesframe" position="insidetopright" offset="25,35" width="30" height="20"/>
				<default>1</default>
			</char_attribute>
			<char_attribute name="conn" source="discipline.conn">
				<anchored to="command" position="belowleft" offset="0,5" width="30" height="20"/>
				<default>1</default>
			</char_attribute>
			<char_attribute name="security" source="discipline.security">
				<anchored to="conn" position="belowleft" offset="0,5" width="30" height="20"/>
				<default>1</default>
			</char_attribute>
			<char_attribute name="engineering" source="discipline.engineering">
				<anchored to="security" position="belowleft" offset="0,5" width="30" height="20"/>
				<default>1</default>
			</char_attribute>
			<char_attribute name="science" source="discipline.science">
				<anchored to="engineering" position="belowleft" offset="0,5" width="30" height="20"/>
				<default>1</default>
			</char_attribute>
			<char_attribute name="medicine" source="discipline.medicine">
				<anchored to="science" position="belowleft" offset="0,5" width="30" height="20"/>
				<default>1</default>
			</char_attribute>
			<label>
				<anchored to="command" position="lefthigh" offset="10,0" width="90"/>
			<static textres="char_label_disc_command"/>
			</label>
			<label>
				<anchored to="conn" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_disc_conn"/>
			</label>
			<label>
				<anchored to="security" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_disc_security"/>
			</label>
			<label>
				<anchored to="engineering" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_disc_engineering"/>
			</label>
			<label>
				<anchored to="science" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_disc_science"/>
			</label>
			<label>
				<anchored to="medicine" position="lefthigh" offset="10,0" width="90"/>
				<static textres="char_label_disc_medicine"/>
			</label>
      
<!-- Stress -->
			<frame_char name="stressframe">
				<anchored to="disciplinesframe" position="righthigh" offset="0,0" width="150" height="130" />
			</frame_char>
			<number_stressmax name="maxstress" source="stress.max.total">
				<anchored to="stressframe" position="insidetopright" offset="25,15" width="30" height="20"/>
			</number_stressmax>
			<label>
				<anchored to="maxstress" position="lefthigh" offset="10,0" width="60"/>
				<static textres="char_label_stress"/>
			</label>
			<buttongroup_counter name="stresscounter">
				<anchored to="stressframe" position="insidetopleft" offset="15,45" width="140" height="120"/>
				<stateicons>
					<on>stress_tick</on>
					<off>stress_empty</off>
				</stateicons>
				<spacing>20</spacing>
				<allowsinglespacing/>
				<maxslotperrow>6</maxslotperrow>
				<sourcefields>
					<maximum>stress.max.total</maximum>
					<current>curstress</current>
				</sourcefields>
			</buttongroup_counter>

<!-- Determination -->
			<frame_char name="determinationframe">
				<anchored to="stressframe" position="belowleft" offset="0,0" width="150" height="65" />
			</frame_char>
			<label_frametop>
				<anchored to="determinationframe" />
				<static textres="char_label_determination" />
			</label_frametop>
			<basicnumber name="maxdetermination">
				<anchored to="determinationframe" position="insidetopright" offset="25,15" width="20" height="20"/>
				<min>3</min>
				<max>3</max>
				<invisible/>
			</basicnumber>
			<buttongroup_counter name="determinationcounter">
				<anchored to="determinationframe" position="insidetopleft" offset="15,30" width="140" height="20"/>
				<stateicons>
					<on>stress_tick</on>
					<off>stress_empty</off>
				</stateicons>
				<spacing>20</spacing>
				<allowsinglespacing/>
				<maxslotperrow>6</maxslotperrow>
				<sourcefields>
					<maximum>maxdetermination</maximum>
					<current>curdetermination</current>
				</sourcefields>
			</buttongroup_counter>

 <!-- Values -->
			<frame_char name="valuesframe">
				<anchored to="attributesframe" position="belowleft" offset="0,0" width="170" height="170" />
			</frame_char>
			<label_frametop>
				<anchored to="valuesframe" />
				<static textres="char_label_values" />
			</label_frametop>
			<list_charvalues name="values">
				<anchored to="valuesframe">
					<left offset="15"/>
					<top offset="35"/>
					<right offset="-15"/>
					<bottom offset="-20"/>
				</anchored>
			</list_charvalues>
      
 <!-- Focuses -->
			<frame_char name="focusframe">
				<anchored to="valuesframe" position="righthigh" offset="0,0" width="170" height="170" />
			</frame_char>
			<label_frametop>
				<anchored to="focusframe" />
				<static textres="char_label_focuses" />
			</label_frametop>
			<stringu name="focuses">
				<anchored to="focusframe">
					<top offset="30" />
					<left offset="15" />
					<right offset="-20" />
					<bottom offset="-15" />
				</anchored>
				<multilinespacing>20</multilinespacing>
			</stringu>
			<scrollbar_list>
				<anchored to="focuses" />
				<target>focuses</target>
			</scrollbar_list>
      
<!-- Injuries -->
			<frame_char name="injuryframe">
				<anchored to="focusframe" position="righthigh" offset="0,0" width="150" height="170" />
			</frame_char>
			<label_frametop>
				<anchored to="injuryframe" />
				<static textres="char_label_injuries" />
			</label_frametop>
			<stringu name="injuries">
				<anchored to="injuryframe">
					<top offset="30" />
					<left offset="15" />
					<right offset="-20" />
					<bottom offset="-15" />
				</anchored>
				<multilinespacing>20</multilinespacing>
			</stringu>
			<scrollbar_list>
				<anchored to="injuries" />
				<target>injuries</target>
			</scrollbar_list>

<!-- Weapons -->
			<frame_char name="weaponsframe">
				<anchored to="valuesframe" position="belowleft" offset="0,0" width="488" height="170" />
			</frame_char>
			<label_frametop>
				<anchored to="weaponsframe" />
				<static textres="char_label_weapons" />
			</label_frametop>
			<label>
				<anchored to="weaponsframe" position="insidetopleft" offset="25,28"/>
				<font>sheetlabelmini</font>
				<static textres="char_label_weapon_name" />
			</label>
			<label>
				<anchored to="weaponsframe" position="insidetopleft" offset="155,28"/>
				<font>sheetlabelmini</font>
				<static textres="char_label_weapon_size" />
			</label>
			<label>
				<anchored to="weaponsframe" position="insidetopleft" offset="200,28"/>
				<font>challengedie_font</font>
				<static text="A"/>
			</label>
			<label>
				<anchored to="weaponsframe" position="insidetopleft" offset="230,28"/>
				<font>sheetlabelmini</font>
				<static textres="char_label_weapon_qualities" />
			</label>
		  
			<list_weapon name="weapons">
				<anchored to="weaponsframe">
					<left offset="15"/>
					<top offset="45"/>
					<right offset="-15"/>
					<bottom offset="-20"/>
				</anchored>
			</list_weapon>
			<scrollbar_list>
				<anchored to="weapons"/>
				<target>weapons</target>
			</scrollbar_list>
			<button_iedit name="weapons_iedit">
				<anchored to="weapons" position="aboveright" offset="5,10"/>
				<target>weapons</target>
			</button_iedit>
			<button_iadd name="weapons_iadd">
				<anchored to="weapons_iedit" position="lefthigh" offset="5,0"/>
				<target>weapons</target>
			</button_iadd>
		</sheetdata>
	</windowclass>
</root>