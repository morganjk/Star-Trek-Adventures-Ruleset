<root version="3.3" release="1.0" logo="logo.png">

<!-- Attributes -->
	<description>
		<text>
			Star Trek Adventures Ruleset
			A fan made ruleset for the Star Trek Adventures RPG. Borrowed heavilly from extension built by Ian M Kirby
		</text>
		<version>1</version>
		<author>Statik367</author>
	</description>
	
<!-- Layers -->
	<importruleset source="CoreRPG" />
	
<!-- String Resources -->
	<includefile source="strings/strings_campaign.xml" />

<!-- Templates -->
	<includefile source="desktop/chit.xml" />
    <includefile source="campaign/template_char.xml" />
	
<!-- Tabletop Chits -->
	<includefile source="desktop/darksidechit.xml" />
	<includefile source="desktop/lightsidechit.xml" />

<!-- Tabletop settings -->
	<includefile source="gameelements.xml" />
	<includefile source="desktop/desktop.xml" />
	
<!-- Scripts -->
	<script name="ChallengeDieHandler" file="scripts/handler_challengedice.lua"/>
	<script name="SkillDieHandler" file="scripts/handler_skilldice.lua"/>
	<script name="TableManager2" file="scripts/manager_table2.lua" />
	<script name="Languages_Extension" file="scripts/languages_extension.lua" /> 
	<script name="LibraryDataSTA" file="scripts/data_library_sta.lua" />
	
<!-- Graphics -->
	<includefile source="graphics/graphics_frames.xml" />
	<includefile source="graphics/graphics_icons.xml" />
	
<!-- Character Sheet -->
    <includefile source="campaign/record_char.xml" />
    <includefile source="campaign/record_char_main.xml" />
    <includefile source="campaign/record_char_abilities.xml" />
    <includefile source="campaign/record_char_inventory.xml" />
    <includefile source="campaign/record_char_notes.xml" />
 
