<root>
<!-- Chat box size -->
	<template name="basicchatentry">
		<chatentry_step>
			<anchored position="insidebottomleft" offset="48,34">
				<right offset="-65" />
				<sizelimits>
					<maximum height="160" />
				</sizelimits>
			</anchored>
		</chatentry_step>
	</template>

<!-- Chat output position-->
	<template name="basicchatwindow">
		<chatwindow_step name="chat">
			<anchored position="insidetopleft" offset="45,25">
				<right offset="-30" />
				<bottom parent="entry" anchor="top" relation="relative" offset="-15" />
			</anchored>
			<stateframe>
				<drophilight name="chatboxhilight" offset="6,40,17,12" />
			</stateframe>
		</chatwindow_step>
	</template>

</root>
